/*******************************
         Site Overrides
*******************************/


.pusher {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
}

.pusher > main {
    padding: 3.8rem 0;
    flex: 1;
}

footer.site.footer {
    
    @spacing: 1rem;
    
    .main {

        border-top: 1px solid rgba(34,36,38,.15);
        padding: @spacing 0 0;
        
        & > .ui.container {
            margin-bottom: @spacing;
        }
    }
    
    .micro {
        padding-bottom: @spacing;
        background-color: @colorGrayLight;
    
        &,
        .item {
           font-size: .85rem;
        }
    }
}

#instafeed {
    width: 100%;
    text-align: center;
}

.text {

    &.meta {
        color: @colorGray;
    }
    
    &.bordered {
        border-color: #000;
        border-style: solid;
        border-width: 0;
        line-height: 2rem;
    
        &.bottom {
            border-bottom-width: 1px;
        }
        
        &.top {
            border-top-width: 1px;
        }
        
        &.meta {
            border-color: @colorGray;
        }
    }
        
    &.small {
        font-size: 90%;
    }
}

body.home .header.banner {
    height: 350px;
    overflow: hidden;
    box-shadow: 0 0 12px rgba(0,0,0,.35) inset;
    
    img {
        z-index: -1
    }
    
    @media only screen and (max-width: @largestMobileScreen){
        height: 151px;
    }
    
    @media only screen and (min-width: @tabletBreakpoint) and (max-width: @largestTabletScreen){
        height: 250px;
    }
}

body.home main.content > .ui.container {
    margin-top: 3rem;
}

body.home main.content .ui.alert.message {
    margin-top: -6rem;
}

body.initiatives main.content,
body.calendar main.content {
    margin-top: 1rem;
    background-color: @colorGrayLight;
}

body.new-initiative main.content {
    padding-bottom: 0;
    background-color: rgb(225, 242, 193); // hack: match google form
}

body.businesses main.content {
    margin-top: 3rem;
    background: url(/assets/img/map.jpg) no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}

#blogList {
    margin-top: 1rem;
}

article.post {

    margin-top: 5rem;
    
    .header {

        h1,h2,h3 {
            font-family: 'Montserrat', Lato, sans-serif;
        }
    
        .meta.text span:last-child {
            border-top: 1px solid @colorGrayLight;
        }
    }
}
/*******************************
    User Variable Overrides
*******************************/

.calendar.list {

    .item {
    
        border-left: .5rem solid transparent;
        padding-left: 1.5rem;
        margin-bottom: 1rem;
        
        &.primary {
          border-color: @green;
        }
        
        &.secondary {
          border-color: @colorGrayLight;
        }
        
        .header,
        .meta {
            margin-bottom: .5rem;
        }
    }
}
/*******************************
    User Variable Overrides
*******************************/

.calendar.list {

    .item {
    
        border-left: 5px solid transparent;
        transition: all 1s;
        
        &:hover {
            padding-left: 10px;
            border-left-color: @colorGray;
        }
        
        .header,
        .meta {
            margin-bottom: .5rem;
        }
    }
}